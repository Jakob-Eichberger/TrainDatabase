<UserControl x:Class="WPF_Application.TimeCapture.MultiTraction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" Name="UcTraction">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="AUTO" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="AUTO" />
            <ColumnDefinition Width="AUTO" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5,5,5,5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="sp_Table" VerticalAlignment="Stretch" HorizontalAlignment="Left" />
            </ScrollViewer>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="5,5,5,5"
                Grid.ColumnSpan="2">
            <Grid Name="sp_Plot" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        </Border>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition Width="AUTO" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
            </Grid.RowDefinitions>
            <Button Name="btnStart" Content="Start" Margin="5" Padding="5" Grid.Column="0"
                    Click="BtnStartSpeedMeasurement_Click"
                    IsEnabled="{Binding ElementName=UcTraction,Path=TimeCapture.IsRunning}" />
        </Grid>
    </Grid>
</UserControl>