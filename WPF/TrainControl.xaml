<Window x:Class="WPF_Application.TrainControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Application"
        mc:Ignorable="d"
        Title="TrainControl" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Name="mw">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="KW:" Grid.Column="0" Grid.Row="0"  VerticalAlignment="Center"></Label>
        <Slider x:Name="SliderTargetSpeed" Maximum="126" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Width="200" ValueChanged="TargetSpeed_Changed"></Slider>
        <Slider x:Name="SliderCurrentSpeed" Maximum="126" Value="{Binding ElementName=mw,Path=Lok_CurrentState.Fahrstufe}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" IsEnabled="False"></Slider>
        <Label Content="KM/H:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"></Label>
    </Grid>
</Window>
