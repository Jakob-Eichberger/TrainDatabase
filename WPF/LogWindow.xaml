<Window x:Class="WPF_Application.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Application"
        mc:Ignorable="d"
     Title="Log"  Height="450" Width="800" WindowStyle="ToolWindow" Name="MainWindow" Closing="MainWindow_Closing">
    <ScrollViewer Name="Sv" VerticalScrollBarVisibility="Visible" Margin="5">
        <TextBlock Text="{Binding ElementName=MainWindow,Path=Text, Mode=OneWay}" FontFamily="Consolas"></TextBlock>
    </ScrollViewer>
</Window>
